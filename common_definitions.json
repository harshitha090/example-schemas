{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://raw.githubusercontent.com/harshitha090/example-schemas/main/common_definitions.json",
    "type": "object",
    "properties": {
        "age": {"type": "integer", "minimum": 0},
        "score": {"type": "number"},
        "balance": {
            "type": "number",
            "format": "float",  // Explicitly defines it as a float
            "minimum": 0.01,
            "pattern": "^\\d*\\.\\d+$"  // Ensures the value is a float
        },
        "address": {
            "type": "object",
            "properties": {
                "street": {"type": "string"},
                "city": {"type": "string"},
                "state": {"type": "string"},
                "postalCode": {"type": "string"},
                "country": {"type": "string"}
            },
            "required": ["street", "city", "state", "postalCode", "country"]
        },
        "float": {
            "type": "number",
            "format": "float",
            "minimum": -3.4e38,
            "maximum": 3.4e38,
            "pattern": "^\\d*\\.\\d+$"
        },
        "double": {
            "type": "number",
            "format": "double",
            "minimum": -1.7e308,
            "maximum": 1.7e308,
            "pattern": "^\\d*\\.\\d+$"
        },
        "long": {
            "type": "integer",
            "minimum": -9223372036854775808,
            "maximum": 9223372036854775807
        }
    },
    "required": ["age", "score", "balance", "address"]
}
